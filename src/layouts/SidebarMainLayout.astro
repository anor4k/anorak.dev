---
import Profile from "../components/Profile.astro";
---

<header>
    <Profile />
</header>
<main>
    <div class="content">
        <slot />
    </div>
</main>

<style>
    header {
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        width: 18rem;
        margin: 0;
        padding: 0;
        height: 100%;
    }
    main {
        display: block;
        margin-left: 18rem;
        width: calc(100% - 18rem);
    }
    .content {
        padding: 2rem;
        max-width: 960px;
        margin: auto;
    }
</style>
