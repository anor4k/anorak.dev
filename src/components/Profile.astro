---
import * as Icon from "astro-feather-icons";

const title = "Anorak";
const colorText = "rgb(255, 255, 255)";
const colorMuted = "rgb(224, 224, 224)";
const colorBackground = "rgb(31, 31, 31)";
---

<div class="header">
    <a href="/"><h1>{title}</h1></a>
    <img
        class="header-image"
        src="/profile.jpg"
        alt="Profile Picture"
        width="66%"
        height="auto"
    />
    <nav class="header-menu">
        <ul>
            <li><a href="/">Home</a></li>
            <!-- <li><a href="/blog">Blog</a></li> -->
            <li><a href="/resume/index.html">Resume</a></li>
        </ul>
    </nav>
    <p class="description">Huge nerd. Data Scientist @ Uncover</p>
    <ul class="header-social">
        <li>
            <a target="_blank" href="mailto:noel.eliezer+anorak.dev@gmail.com"
                ><Icon.Mail /></a
            >
        </li>
        <li>
            <a target="_blank" href="https://github.com/anor4k">
                <Icon.GitHub />
            </a>
        </li>
        <li>
            <a target="_blank" href="https://x.com/noelveliezer">
                <Icon.Twitter />
            </a>
        </li>
    </ul>
</div>

<style define:vars={{ colorBackground, colorMuted, colorText }}>
    .header {
        font-family: "IBM Plex Sans", sans-serif;
        color: var(--colorText);
        display: flex;
        flex-direction: column;
        background-color: var(--colorBackground);
        height: 100%;
        width: 100%;
        padding: 4rem 1rem;
        gap: 2rem;
        align-items: center;
        text-align: center;
    }
    .header-image {
        border: 5px solid var(--accent);
        border-radius: 100%;
    }
    h1 {
        font-variant-caps: small-caps;
        font-weight: 500;
        font-size: 2.5rem;
        margin: 0;
    }

    ul {
        margin: 0;
        padding: 0;
    }

    li {
        list-style: none;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    a > svg {
        color: var(--accent);
    }

    .header-menu {
        color: var(--accent);
        display: flex;
        flex-direction: column;
        padding: 0;
        margin: 0;
    }

    .header-menu li + li {
        margin-top: 0.5rem;
    }

    .description {
        color: var(--colorMuted);
    }

    .header-social {
        display: flex;
        gap: 1rem;
        padding: 0;
        margin: 0;
    }
</style>
